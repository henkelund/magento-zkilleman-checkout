<config>
    <modules>
        <Zkilleman_Checkout>
            <version>0.1.0.0</version>
        </Zkilleman_Checkout>
    </modules>
    <global>
        <models>
            <zkilleman_checkout>
                <class>Zkilleman_Checkout_Model</class>
            </zkilleman_checkout>
        </models>
        <helpers>
            <zkilleman_checkout>
                <class>Zkilleman_Checkout_Helper</class>
            </zkilleman_checkout>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <zkilleman_checkout>
                    <file>zkilleman_checkout.xml</file>
                </zkilleman_checkout>
            </updates>
        </layout>
        <events>
            <core_layout_update_updates_get_after>
                <observers>
                    <zkilleman_checkout_layout_updates>
                        <class>zkilleman_checkout/observer</class>
                        <method>afterGetLayoutUpdates</method>
                    </zkilleman_checkout_layout_updates>
                </observers>
            </core_layout_update_updates_get_after>
        </events>
    </frontend>
    <default>
        <zkilleman_checkout>
            <general>
                <enabled>0</enabled>
            </general>
        </zkilleman_checkout>
    </default>
</config>
